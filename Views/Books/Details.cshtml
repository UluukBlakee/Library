@model Library.Models.Book

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-4">
            <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid">
        </div>
        <div class="col-md-8">
            <div class="card text-left">
                <div class="card-body">
                    <h4 class="card-title">Информация о книге</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">
                            Название:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-3">
                            Автор
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Author)
                        </dd>
                        <dt class="col-sm-3">
                            Год релиза:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.YearRelease)
                        </dd>
                        <dt class="col-sm-3">
                            Описание:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-3">
                            Категория:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Category.Name)
                        </dd>
                        <dt class="col-sm-3">
                            Статус:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                        <dt class="col-sm-3">
                            Дата добавления:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DateAdded)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Удалить</a>
                    <br />
                    <a asp-action="Index" class="mt-3">Назад в список книг</a>
                </div>
            </div>
        </div>
    </div>
</div>